<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TabUsersFragment">

    <TextView
        android:id="@+id/username_Users"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="20"
        android:gravity="bottom"
        android:hint="@string/nome_do_usu_rio"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/email_Users"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="20"
        android:gravity="bottom"
        android:hint="@string/email_hint"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        tools:ignore="LabelFor,RtlCompat" />

    <EditText
        android:id="@+id/password_Users"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:ems="20"
        android:gravity="bottom"
        android:hint="@string/password_hint"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/NewPassword_Users"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:ems="20"
        android:gravity="bottom"
        android:hint="@string/nova_senha"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btnSave_Users"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="@string/salvar"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewPassword_Users"
        app:layout_constraintVertical_bias="0.71" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="@string/deslogar"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>