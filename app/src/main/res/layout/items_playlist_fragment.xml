<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relativeLayItemsPlaylist"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/border_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <TextView
            android:id="@+id/titulo_Playlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="90dp"
            android:autoLink="web"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            tools:ignore="RtlCompat,VisualLintOverlap,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/descricao_Playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:ignore="RtlCompat,VisualLintOverlap" />

        <TextView
            android:id="@+id/nomeCanal_Playlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="40dp"
            android:autoLink="web"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            tools:ignore="RtlCompat,SpeakableTextPresentCheck,VisualLintOverlap" />

        <TextView
            android:id="@+id/nomeUsuario_Playlist"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:ignore="RtlCompat,VisualLintBounds" />

        <ImageView
            android:id="@+id/menuOptionsPlaylist"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/nomeUsuario_Playlist"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="110dp"
            android:contentDescription="@string/menuoptions"
            android:src="@drawable/more_vert" />

        <TextView
            android:id="@+id/dataPub_Playlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:ignore="RtlCompat,VisualLintBounds" />

        <TextView
            android:id="@+id/comentariosPlaylists"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/coment_rios"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            tools:ignore="VisualLintOverlap,TextContrastCheck" />

        <Spinner
            android:id="@+id/ratingBar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:max="5"
            android:progress="0"
            android:scaleX="0.75"
            android:scaleY="0.75"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>